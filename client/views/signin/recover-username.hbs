{{> logo}}
<header>
  <h1 class="text-center">Recover Username</h1>
</header>

<form method="post" action="/recover-username">
  <fieldset>
    <label>Email</label>
    <input
      name="email"
      type="text"
      pattern=".{1,}"
      class="input-text fullwidth"
      value="{{email}}"
      placeholder=""
      required
    />
  </fieldset>
  <button type="submit">Recover my username</button>
</form>
<footer>
  <p>
    <span
      >Already have an account?
      <a id="sign-in" href="signin-non-hosted">Sign in</a></span
    >
  </p>
  <p>
    <span
      >Forgot password?
      <a id="forgot-password" href="forgot-password">Retrieve it here</a></span
    >
  </p>
</footer>
<br />
